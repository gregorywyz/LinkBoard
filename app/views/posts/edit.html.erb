<h2>Posts Edit</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= render "layouts/flash" %>


    <%= bootstrap_form_for @post do |f| %>
    <%= f.text_field :title %>
    <%= f.text_field :link %>
    <%= f.primary "Update", class: "btn btn-success"  %>
    <% end %>
    <%= link_to "Delete", post_path(@post.id), :method => :delete, :class=>"btn btn-danger" %>

  </div>
</div>