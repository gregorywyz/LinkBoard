<h2>Comments INdex</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

  <h3><%= @post.title %></h3>

  <h4><%= link_to @post.link, @post.link %></h4>

  <p><%= @post.user.email %></p>

  <%= link_to "<i class=\"glyphicon glyphicon-pencil\"></i>".html_safe, new_post_comment_path(@post.id), :class=>"btn btn-primary" %>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Comments</th>
      </tr>
    </thead>
    <tbody>

      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.user.email %> : <%= comment.body %></td>
        </tr>
        <tr>
          <td>
            <span>
            <%= bootstrap_form_for [@post, comment, @vote] do |f| %>
              <%= f.hidden_field :value, value: 1 %>
              <%= f.button "", class: "btn btn-primary btn-xs glyphicon glyphicon-hand-up" %>
            <% end %>
            <%= bootstrap_form_for [@post, comment, @vote] do |f| %>
              <%= f.hidden_field :value, value: -1 %>
              <%= f.button "", class: "btn btn-danger btn-xs glyphicon glyphicon-hand-down" %>
            <% end %>
            </span>
            <span>Rating: <%= comment.votes.reduce(0){|sum, v| sum += v.value} %></span>
          </td>
        </tr>
      <% end %>

    </tbody>
  </table>

  </div>
</div>