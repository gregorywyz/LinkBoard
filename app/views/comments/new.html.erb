<h2>New Comment Page</h2>


<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <h3><%= @post.title %></h3>

    <%= bootstrap_form_for [@post, @comment] do |f| %>
      <%= f.text_field :body, placeholder: "Enter your comment", icon: "pencil" %>
      <%= f.submit "Create Comment", class: "btn btn-primary" %>
    <% end %>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Comments</th>
        </tr>
      </thead>
      <tbody>

        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.body %></td>
          </tr>
        <% end %>

      </tbody>
    </table>

  </div>
</div>