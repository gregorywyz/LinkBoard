<h2>Home Page!!!</h2>

<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <table class="table table-hover">
      <thead>
        <tr>
          <th class="text-center">Vote</th>
          <th class="text-center">Rating</th>
          <th class="text-center">Comment</th>
          <th>Link</th>
          <th class="text-right">Member</th>
        </tr>
      </thead>
      <tbody>

        <% @posts.each do |post| %>
        <tr>
          <td class="text-center">
            <%= bootstrap_form_for [post, @vote] do |f| %>
              <%= f.hidden_field :value, value: 1 %>
              <%= f.button "", class: "btn btn-primary btn-xs glyphicon glyphicon-hand-up" %>
            <% end %>
            <%= bootstrap_form_for [post, @vote] do |f| %>
              <%= f.hidden_field :value, value: -1 %>
              <%= f.button "", class: "btn btn-danger btn-xs glyphicon glyphicon-hand-down" %>
            <% end %>
          </td class="text-center">
          <td class="text-center"><%= post.votes.reduce(0){|sum, v| sum += v.value} %></td>
          <td class="text-center"><%= link_to "<i class=\"glyphicon glyphicon-pencil\"></i>".html_safe, post_comments_path(post), :class=>"btn btn-info" %></td>
          <td><%= link_to post.title, post.link %></td>
          <td class="text-right"><%= post.user.email %></td>
        </tr>
        <% end %>

      </tbody>
    </table>

  </div>
</div>





