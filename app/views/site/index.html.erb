<h2>Home Page!!!</h2>

<%= render "layouts/flash" %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Link</th>
          <th class="text-right">Member</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |p| %>
        <tr>
          <td><%= link_to p.title, p.link %></td>
          <td class="text-right"><%= p.user.email %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>



