<h2>Home Page!!!</h2>

<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <table class="table table-hover">
      <thead>
        <tr>
          <th class="text-center">Vote</th>

          <th class="text-center">Comment</th>
          <th>Link</th>
          <th class="text-right">Member</th>
        </tr>
      </thead>
      <tbody>

        <% @posts.each do |post| %>
        <tr>
          <td class="text-center">
            <div class="row">
              <div class="col-xs-12">
                <%= bootstrap_form_for [post, @vote] do |f| %>
                  <%= f.hidden_field :value, value: 1 %>
                  <%= f.button "", class: "btn btn-link btn-xs glyphicon glyphicon-hand-up" %>
                <% end %>
              </div>
              <div class="col-xs-12">
                <%= post.votes.reduce(0){|sum, v| sum += v.value} %>
              </div>
              <div class="col-xs-12">
                <%= bootstrap_form_for [post, @vote] do |f| %>
                  <%= f.hidden_field :value, value: -1 %>
                  <%= f.button "", class: "btn btn-link btn-xs glyphicon glyphicon-hand-down" %>
                <% end %>

              </div>
            </div>
          </td>
          <td class="text-center"><%= link_to "<i class=\"glyphicon glyphicon-pencil\"></i>".html_safe, new_post_comment_path(post), :class=>"btn btn-info btn-sm" %></td>
          <td>
            <div class="col-xs-12">
              <%= link_to post.title, post.link %>
            </div>
            <div class="col-xs-12">
              <%= link_to "comments", post_comments_path(post) %> (<%= post.comments.length %>)
            </div>
          </td>
          <td class="text-right"><%= post.user.email %></td>
        </tr>
        <% end %>

      </tbody>
    </table>

  </div>
</div>





